@model EmpApp.Models.UserLoginMVC


@{
    ViewData["Title"] = "Login";
    
}

<link rel="stylesheet" href="~/css/reg.css" />

<div class="addcontainer">
    <div class="wrapper">

<h1 style="color: dimgrey">Admin Login</h1>





        <form asp-action="Login">
            
           
            <div class="form-center">
                <label asp-for="UserName" class="label"></label>
                <input asp-for="UserName" class="input" style="width: 200px" placeholder="UserName" id="ip1" />
                <span asp-validation-for="UserName" class="highlight"></span>
            </div>
            <div class="form-center">
                <label asp-for="Password" class="label"></label>
                <input asp-for="Password" class="input" style="width: 200px" placeholder="Password" id="ip1" />
                <span asp-validation-for="Password" class="highlight"></span>
            </div>
            <div class="form-center">
                <br />
                <input type="submit" value="Login" class="button" />
            </div>
            
            
        </form>

     
    </div>
</div>
<div>
    <a asp-action="Login">Back to List</a>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
